<%= simple_form_for @note do |f| %>
    <% if @note.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@note.errors.count, "error") %> prohibited this page from being saved:</h2>

          <ul>
            <% @note.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.input :title %>
    <%= f.input :message, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } } %>
    <%= f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }%>
    <%= f.input :order %>
    <%= f.button :submit, 'Save Note', class: 'btn btn-primary' %>
<% end %>